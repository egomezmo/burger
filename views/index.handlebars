<body>

  <div class="jumbotron text-center">
    <h1>Eat-Da-Burger!</h1>
    <img src="http://img.time2draw.com/2015/01/How-to-Draw-Burger-Food-final-step-215x382.png" alt="BURGER" height="200"
      width="100" />
  </div>

  <div class="container">
    <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-5">
        <ol>
          {{#each cats}}      
          {{#if sleepy}}


          {{> burger/burger-block sleep=false}}

          
          {{/if}}
          {{/each}}
        </ol>

      </div>
      <div class="col-sm-5">
        <ol>
          {{#each cats}}
          {{#unless sleepy}}


          {{> burger/burger-block2 sleep=true}}



          {{/unless}}
          {{/each}}
        </ol>
        <BR>
      </div>

    </div>

    <div class=row>

      <div class="col-sm-4"></div>
      <div class="col-sm-4">

        <form class="create-form">

          <div class="form-group">
            <input class="form-control" rows="5" id="ca" name="name"></input>
            <p>ENTER A BURGER YOU WANT TO EAT AND SUMMIT</p>
          </div>
          <button type="submit" class="btn btn-primary">SUMMIT</button>

          <div class="form-group">

            <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
            <input type="radio" name="sleepy" value="0"> Awake
          </div>

        </form>
      </div>
      <div class="col-sm-4"></div>
    </div>
  </div>
</body>